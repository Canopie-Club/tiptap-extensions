{
  "name": "@canopie/tiptap-extensions",
  "version": "0.1.0",
  "description": "Custom TipTap extensions for rich text editing",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "build:lib": "tsup",
    "dev:lib": "tsup --watch",
    "typecheck": "tsc --project tsconfig.lib.json --noEmit",
    "prepublishOnly": "bun run build:lib && cp README-npm.md README.md"
  },
  "dependencies": {
    "@nuxtjs/tailwindcss": "6.13.1",
    "@radix-ui/colors": "^3.0.0",
    "@tiptap-pro/extension-drag-handle": "^2.17.5",
    "@tiptap/extension-bubble-menu": "^2.11.5",
    "@tiptap/extension-placeholder": "^2.11.5",
    "@tiptap/pm": "^2.11.5",
    "@tiptap/starter-kit": "^2.11.5",
    "@tiptap/vue-3": "^2.11.5",
    "@vueuse/core": "^12.7.0",
    "@vueuse/nuxt": "12.7.0",
    "nuxt": "^3.15.4",
    "sass": "^1.85.1",
    "tailwindcss-animate": "^1.0.7",
    "tippy.js": "^6.3.7",
    "vue": "latest",
    "vue-router": "latest"
  },
  "peerDependencies": {
    "@tiptap/core": "^2.0.0",
    "@tiptap/vue-3": "^2.0.0",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "esbuild-plugin-vue3": "^0.4.2",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "tiptap",
    "editor",
    "vue",
    "extensions"
  ],
  "license": "MIT"
}
